@model BookstoreAPP.DTO.BookDetailViewModel

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .container {
            max-width: 800px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .book-detail {
            background-color: #ffffff;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

            .book-detail h2 {
                margin-top: 0;
            }

            .book-detail p {
                margin: 5px 0;
            }

            .book-detail .price {
                font-size: 24px;
                color: #007bff;
            }

        .reviews {
            margin-top: 30px;
        }

            .reviews h3 {
                margin-bottom: 20px;
            }

        .review-item {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
        }

            .review-item h4 {
                margin-top: 0;
            }

        .rating {
            color: #ffc107;
        }

        .add-to-cart {
            text-align: center;
            margin-top: 30px;
        }

            .add-to-cart button {
                padding: 12px 20px;
                font-size: 18px;
                border: none;
                background-color: #007bff;
                color: white;
                border-radius: 4px;
                cursor: pointer;
            }

                .add-to-cart button:hover {
                    background-color: #0056b3;
                }

        .stars {
            color: #ffc107;
        }
    </style>
}

<div class="container">
    <h1>Book Details</h1>

    <div class="book-detail">
        <h2>@Model.Book.Title</h2>
        <p><strong>Author:</strong> @Model.Book.Author</p>
        <p class="price"><strong>Price:</strong> $@Model.Book.Price</p>
    </div>

    <div class="reviews">
        <h3>Reviews</h3>
        @if (Model.ReviewDto != null && Model.ReviewDto.Any())
        {
            @foreach (var review in Model.ReviewDto)
            {
                <div class="review-item">
                    @if (review.Customer != null)
                    {
                        <h4>@review.Customer.Name</h4>
                        <div class="stars" data-rating="@review.Rating"></div>
                        <p>@review.Comment</p>
                    }
                </div>
            }
        }
        else
        {
            <p>No reviews available for this book.</p>
        }
    </div>

    <div class="add-to-cart">
        @if (Model.IsLoggedIn)
        {
            <form method="post" asp-action="Index" asp-controller="Cart">
                <input type="hidden" name="bookId" value="@Model.Book.BookId" />
                <button type="submit">Add to Cart</button>
            </form>
        }
        else
        {
            <p>User is not logged in! Please <a href="/Account/Login">login</a> to add this item to cart.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $.fn.stars = function () {
            return $(this).each(function () {
                // Get the value
                var val = parseFloat($(this).data('rating'));

                // Make sure that the value is in 0 - 5 range
                val = Math.max(0, Math.min(5, val));

                // Round to nearest quarter
                val = Math.round(val * 4) / 4;

                // Generate stars
                var fullStars = Math.floor(val);
                var halfStar = val % 1 !== 0 ? 1 : 0;
                var emptyStars = 5 - fullStars - halfStar;

                var stars = '★'.repeat(fullStars) + (halfStar ? '½' : '') + '☆'.repeat(emptyStars);

                // Replace the numerical value with stars
                $(this).html(stars);
            });
        }

        $(function () {
            $('.stars').stars();
        });
    </script>
}
