@model BookstoreAPP.DTO.ReviewViewModel

@{
    ViewBag.Title = "Review Order";
}

<h2>Review Order</h2>

<form asp-action="SubmitReview" method="post">
    <input type="hidden" asp-for="OrderID" />
    <input type="hidden" asp-for="CustomerID" />
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total Amount</th>
                <th>Rating</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderDetails.Count; i++)
            {
                <tr>
                    <td>@Model.OrderDetails[i].Title</td>
                    <td>@Model.OrderDetails[i].Quantity</td>
                    <td>@Model.OrderDetails[i].Price</td>
                    <td>@Model.OrderDetails[i].TotalAmount</td>
                    <td>
                        <input type="number" asp-for="OrderDetails[i].Rating" min="1" max="5" class="form-control" />
                    </td>
                    <td>
                        <textarea asp-for="OrderDetails[i].Comment" class="form-control"></textarea>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
